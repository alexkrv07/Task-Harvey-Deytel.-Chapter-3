/*Ввести сторону квадрата от 1 до 20 и вівести полній квадрат на єкран*/

#include <stdio.h>

int main()
{
   int sizeMax = 0, sizeH = 1, sizeV = 1;
   
   while (sizeMax  < 1 )
   {
       printf ("Введите сторону квадрата от 1 до 20:");
       scanf("%d", &sizeMax);
      
   }
   while (sizeV <= sizeMax)
   {
      while (sizeH <= sizeMax)
      {
         printf ("*");
         sizeH++;
      }
      printf("\n");
      sizeH = 1;
      sizeV++;   
   }   
}
